<%# <h1>As a user I can delete a booking</h1> %>
<%# <h1>As a user I can leave a review</h1> %>
<div class="show-container p-4 m-4">
  <h1><%= @flat.name %></h1>
  <div class="d-flex justify-content-between align-self-start rounded p-4" style="background-color:white; box-shadow: 0 0 15px rgba(0,0,0,0.2);">
    <div class="flat-img-container" style="height:200px">
      <img src="<%= @flat.photos %>" class="h-100" style="object-fit: cover;" alt="flat_photo">
    </div>
    <div class="flat-info-container flex-grow-1 d-flex flex-column px-4">
      <h6>Date</h6>
      <p class="text-dark"><%= @booking.start_date.strftime('%Y-%m-%d') %> ~ <%= @booking.end_date.strftime('%Y-%m-%d') %></p>
    </div>
    <% if @booking.start_date.to_date > Date.today %>
      <div class="booking-cancel">
        <%= button_to  booking_path(@booking), method: :delete, data: { confirm: 'Are you sure you want to remove this exercise?' }, class:"btn btn-danger border rounded-5"  do %>
          <p class="mb-0 text-white">cancel <i class="fa-solid fa-x" style="color: #ffffff;"></i></p>
        <% end %>
      </div>
    <% else %>
      <div class="booking-review">
        <%= link_to new_booking_review_path(@booking), class:"btn btn-dark border rounded-5" do %>
          <p class="mb-0">Leave a review</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
